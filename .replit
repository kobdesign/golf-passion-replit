modules = ["nodejs-20", "web", "bun", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bun run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34055
externalPort = 3001

[[ports]]
localPort = 41687
externalPort = 3000

[[ports]]
localPort = 42437
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bun", "run", "start"]
build = ["bun", "run", "build"]
